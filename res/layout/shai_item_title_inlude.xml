<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/text_horizontal_margin"
    android:paddingLeft="@dimen/text_horizontal_margin"
    android:paddingRight="@dimen/text_horizontal_margin"
    android:paddingTop="@dimen/text_horizontal_margin" >

    <ImageView
        android:id="@+id/shai_head_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shai_head_img"
        android:layout_alignTop="@+id/shai_head_img"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/shai_head_img"
        layout="@layout/shai_item_title_center_inlude" />

    <TextView
        android:id="@+id/shai_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/ic_shai_time"
        android:drawablePadding="5dp" />

</RelativeLayout>